#include <stdio.h>
#include <netdb.h>
#include <arpa/inet.h>

int main() {
    char hostname[100];
    printf("Enter hostname: ");
    scanf("%s", hostname);

    struct hostent *host = gethostbyname(hostname);
    if (host)
        printf("IP address: %s\n", inet_ntoa(*(struct in_addr*)host->h_addr));
    else
        printf("Hostname could not be resolved\n");

    return 0;
}
